// Program no 3
let num="567935";
let arr=[...num]
console.log(arr);
function SumOfEven(num2)
{
if(num2%2==0)
   {
        return num2;
    }
      }
let evenNum=arr.filter(SumOfEven);
console.log("Even numbers are: " + evenNum);
function SumOfArray(sum,num3)
 {
     return Number(sum)+ Number(num3);
 }
let sumarr=evenNum.reduce(SumOfArray);
console.log("Sum of even digits is : " + sumarr);




// Program no 4
let number=parseInt(prompt("Enter value to Calculate :"));
function CalculateSquare(n1)
 {
    return n1**2;
 }
function CalculateCube(n2)
 {
     return n2**3;
 }
let squaredNumber=CalculateSquare(number);
let cubedNumber=CalculateCube(number);
console.log("Square of a number is : "+ squaredNumber);
console.log("Cube of a number is : "+ cubedNumber);




// Program no 05
var char="";
let string=prompt("Enter the string");
let number=prompt("Enter the Number");
for(var i=0;i<string.length;i++)
 {
      char=string.charAt(i);
   if(char=="A" || char=="E" || char=="I" || char=="O" || char=="U" )
    {
        break;
    }
 }
if(i<string.length)
 {
    console.log("Position in the string of the left-most vowel is : " + (i+1));
 }
else
 {
    console.log("***No vowel found at left-most position***");
 }
let reversedNumber=number.toString().split('').reverse().join('');
console.log("The number with its digits in the reverse order is : " + reversedNumber);




